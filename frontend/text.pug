.parzival-text
  navbar
  .columns(v-for="p in page" :key="p")
    .column.is-5.parzival-text-column
      .section
        template(v-for='c, ci in [p + "a", p + "b"]' :key="c")
          hr(v-if="ci > 0")
          table.table.is-narrow(v-if="columns[c]")
            tbody
              tr(v-for="v, vi in columns[c].verses" :key="vi")
                th.verse {{ v.verse }}
                td(v-html="v.html")
    .column.is-7.parzival-facsimile-column
      facsimile-viewer
