container.parzival-transcript(:manuscript="manuscript" :pages="pages")
  .parzival-transcript-view
    .tile.is-ancestor
      .tile.is-parent(:class="classes.orientation")
        .tile.is-child(ref="transcript" :class="classes.transcript")
          .box.is-link(v-if="transcript.length > 0")
            pagination(:manuscript="manuscript" :pages="pages")
          article.message.is-warning(v-if="transcript.length == 0")
            .message-body
              p Kein Transkript für diese Seite
          article.message(v-for="t in transcript"
            :key="manuscript + t.column" :class="t.columnClass" :data-column="t.column" ref="columns")
            .message-header
              p {{ manuscript }} – {{ t.column }}
            .message-body
              table.table.is-fullwidth
                tbody
                  tr(v-for="l, li in t.contents" :key="li")
                    template(v-if="l.type == 'heading'")
                      td.parzival-heading(colspan="2")
                        div(v-for="h, hi in l.heading" :key="hi") [{{ h }}]
                    template(v-if="l.type == 'verse'")
                      th.parzival-verse-num {{ l.verse }}
                      td.parzival-verse(v-html="l.html")
          .box.is-link
            pagination(:manuscript="manuscript" :pages="pages")
        .tile.is-child
          facsimile-viewer(:manuscript="manuscript" :pages="pages")
