.parzival-navigation
  nav.navbar.is-fixed-top.is-dark(role="navigation" aria-label="main navigation")
    .navbar-brand
      router-link.navbar-item(to="/").has-text-weight-bold Nuwer Parzifal
      button.button.is-dark.navbar-burger(@click='toggle("menu")' :class='active("menu")')
        span
        span
        span
    .navbar-menu(:class='active("menu")')
      .navbar-start
        .navbar-item.has-dropdown(@click='toggle("msDrop")' :class='active("msDrop")')
          a.navbar-link.has-text-weight-bold {{ manuscript.sigil }} – {{ manuscript.title }}
          .navbar-dropdown
            router-link.navbar-item(v-for='m in manuscripts'  :key='m.sigil'
              :to='gotoManuscript(m.sigil)').
                {{ m.sigil}} – {{ m.title }}
        .navbar-item.has-dropdown(@click='toggle("menuDrop")' :class='active("menuDrop")')
          router-link.navbar-link(to="/about")
            span.icon: i.fa.fa-info
            span Info
          .navbar-dropdown
            router-link.navbar-item(to="/about") Zum Projekt
            router-link.navbar-item(to="/materials") Materialien
            router-link.navbar-item.is-info(to="/help") Hilfe
      navigation.navbar-end(v-if="$mq.desktop")