nav.navbar.is-fixed-bottom.is-light(role="navigation" aria-label="pagination")
  .navbar-menu.is-active
    .navbar-start
      .navbar-item
        nav.breadcrumb(aria-label="breadcrumbs")
          ul
            li.is-active: a {{ title }}
            li.is-active: a {{ page }}

    .navbar-end
      .navbar-item
        .field
          .control.has-icons-right
            input.input(type="text" placeholder="Seite")
            span.icon.is-right: i.fa.fa-search
      .navbar-item
        .field
          .control.has-icons-right
            input.input(type="text" placeholder="Vers")
            span.icon.is-right: i.fa.fa-search
      .navbar-item
        .field.is-grouped
          .control
            router-link.button(:to='{ name: "facsimile", params: { sigil: sigil, page: prevPage } }' :disabled="noPrevPage")
              i.fa.fa-angle-left
          .control
            router-link.button(:to='{ name: "facsimile", params: { sigil: sigil, page: nextPage } }' :disabled="noNextPage")
              i.fa.fa-angle-right
